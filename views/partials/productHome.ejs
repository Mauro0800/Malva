<figure class="home__main__productos__figure">
  <button data-id="<%= id %>" id="btn-addCart"><i class="bi bi-plus-circle"></i></button>
  <a href="/products/detail/<%= id %>">
    <div class="home__main__productos-imagen">
      <img src="/images/products/<%= image ? image : 'default-image.png' %>" alt="">
    </div>
    <div class="home__main__productos-detalle">
      <h4><%= name %></h4>
      <p>$<%= price %></p>
    </div>
  </a>
  </figure>