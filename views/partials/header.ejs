    <% if (locals.userLogin) { %>
    <% if (locals.userLogin.rol===1) { %>
      <li><a href="/dashboard">Admin</a></li>
    <% } %>
    <% } %>
    <li><a id="cerrar">Cerrar</a></li>
  </ul>
</div>