<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

  <body class="home">

    <%- include('./partials/header') %>

      <%- include('./partials/menuHam') %>

        <main class="home__main">

          <%- include('./partials/mainBanner') %>

          <div class="home__main__div--wsp">
            <button class="home__main__div__button--wpp"><i class="fa-brands fa-whatsapp"></i></button>
          </div>

          <p class="home__main__p--cuotas">Hasta 6 cuotas sin inter√©s en toda la tienda | 10% de descuento en efectivo
            en
            productos seleccionados</p>

          <%- include('./partials/search') %>

            <section class="home__main__section--body">

              <img class="home__main__section__img--principal" src="/images/products/pino-con-maceta-arpillera-1.jpg"
                alt="">

              <figure class="home__main__botones-fijos">
                <a href="/products/shopping-cart"><button class="boton-shopping"><i
                      class="fa-solid fa-cart-shopping"></i></button></a>
                <a href="#footer"><button class="boton-down"><i class="fa-solid fa-chevron-down"></i></button></a>
                <a href="#"><button class="boton-wpp"><i class="fa-brands fa-whatsapp"></i></button></a>
              </figure>

              <div class="home__main__productos">
                <h3 class="home__main__section__h3">PRODUCTOS</h3>

                <% productsHome.forEach(({name,id,image,price,category, discount})=> { %>
                  <%- include('./partials/productHome',{ name, id, image, price, category, discount }) %>
                    <% }) %>

              </div>


              <section class="home__main__section--destacados">
                <div class="home__main__productos">
                  <h3 class="home__main__section__h3">DESTACADOS</h3>


                  <% productsdistinguished.forEach(({name,id,image,price,category, discount})=> { %>
                    <%- include('./partials/productdistinguished',{ name, id, image, price, category, discount}) %>
                      <% }) %>
                </div>

              </section>

              <div class="ver-todos-los-productos">
                <button><a href="/products">ver todos los productos</a></button>
              </div>

              </div>

            </section>

        </main>

        <footer id="footer" class="home__footer">

          <%- include('./partials/aboveFooter') %>

            <%- include('./partials/footer') %>

        </footer>

        <%- include('./partials/scripts') %>
        <script src="/javascripts/productCart.js"></script>
  </body>

</html>